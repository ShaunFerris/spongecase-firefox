{
  "manifest_version": 3,
  "name": "spOnGeCaSe Converter",
  "version": "0.0.0.1",
  "description": "Converts highlighted text to the case scheme from the mocking spongebob meme",
  "permissions": [
    "activeTab",
    "tabs",
    "clipboardWrite",
    "scripting",
    "notifications"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "slb.ferris46@gmail.com"
    }
  },
  "icons": {
    "16": "/icons/icon16.png",
    "32": "/icons/icon32.png",
    "48": "/icons/icon48.png",
    "128": "/icons/icon128.png",
    "512": "/icons/icon512.png"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "commands": {
    "convert_selection": {
      "suggested_key": {
        "default": "Ctrl+Shift+Q",
        "mac": "Command+Shift+Q"
      },
      "description": "Convert and copy text to spongecase"
    }
  }
}
